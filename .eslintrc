{
  "env": {
    "node": true,
    "jquery": true,
    "browser": true,
    "jasmine": true
  },
  "ecmaFeatures": {
      "jsx": true
  },
  "globals": {
      "jest": false,
  },
  "rules": {
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 1,
    "curly": 1,
    "eol-last": 1,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 4],
    "max-statements": [1, 20],
    "max-len": [1, 120],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 1,
    "no-trailing-spaces": 1,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "quotes": [1, "single", "avoid-escape"],
    "semi": [2, "always"],
    "space-after-keywords": [1, "always"],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "never"],
    "computed-property-spacing": [2, "never"],
    "space-unary-ops": 1,
    "indent": [2, 4]
  }
}
